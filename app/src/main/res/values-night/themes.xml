<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavigatingWithTomTom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/TomTomBottomSheetDialogTheme</item>

        <!-- Colors -->
        <item name="surfaceColor">@color/tt_colour_card_surface_dark</item>
        <item name="dialogButtonTint">@color/tt_colour_body_dark</item>
        <item name="headerTextColor">@color/tt_colour_title_dark</item>
        <item name="subheaderTextColor">@color/tt_colour_body_dark</item>
        <item name="dividerColor">@color/tt_colour_input_field_dark</item>
    </style>
</resources>
